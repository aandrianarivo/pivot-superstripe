{% extends 'base.html.twig' %}

{% block title %}Pricing{% endblock %}

{% block body %}
  <style>
      .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
      .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
  </style>

  <div class=" text-blue-100 p-5 rounded bg-green-400 border flex flex-col justify-center items-center ">
    <h1 class="text-xl" >Choisissez votre abonnement</h1>

    <div class="flex justify-center ">
      {% for plan in plans %}
          <div class=" bg-orange-400 p-10 flex flex-col  justify-center items-center rounded plan m-5 ">
              <h2 class="text-xl">{{ plan.name }}</h2>
              <p class="mb-4">{{ plan.price }}</p>
              <a href="{{ path('app_checkout', {priceId: plan.price_id}) }}" class="bg-green-300 rounded p-2 m-5 text-blue-100" data-turbo="false">
                  S'abonner
              </a>
          </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}
